{% if pagination.pages %}
  <ul class="pagination">
    <li class="{% if not pagination.prev %}disabled{% endif %}">
      <a href="{{pagination.prev.link}}">
        &laquo;
      </a>
    </li>
    {% for page in pagination.pages %}
      {% if page.link %}
        <li><a href="{{page.link}}">{{page.title}}</a></li>
      {% else %}
        <li class="active"><span>{{page.title}} <span class="sr-only">(current)</span></span></li>
      {% endif %}
    {% endfor %}
    <li class="{% if not pagination.next %}disabled{% endif %}">
      <a href="{{pagination.next.link}}">
        &raquo;
      </a>
    </li>
  </ul>
{% endif %}